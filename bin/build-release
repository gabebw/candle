#!/bin/bash

set -eo pipefail

candle_version=$(grep 'version =' Cargo.toml | sed -e 's/version = //' -e 's/"//g')
name="candle-${candle_version}"

export MACOSX_DEPLOYMENT_TARGET=10.7
export TARGET=x86_64-apple-darwin

cargo build --quiet --release --target "$TARGET" --locked

mkdir -p releases
rm -rf releases/"$name"
cd releases
mkdir "$name"
cp ../target/$TARGET/release/candle "$name"
tar czf "$name".tar.gz "$name"
rm -rf "$name"

echo "Version: $candle_version"
echo "Sha256 sum:"
sha256sum "$name".tar.gz | cut -d ' ' -f1
